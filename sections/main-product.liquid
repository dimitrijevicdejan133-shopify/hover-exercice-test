      "type": "color",
      "id": "subscription_selected_border_color",
      "label": "Subscription Selected Border Color",
      "default": "#B8D8D5"
    },
    {
      "type": "range",
      "id": "subscription_selected_border_width",
      "min": 1,
      "max": 10,
      "step": 1,
      "unit": "px",
      "label": "Subscription Selected Border Width",
      "default": 2
    },
    {
      "type": "color",
      "id": "subscription_selected_badge_bg",
      "label": "Subscription Selected Badge Background",
