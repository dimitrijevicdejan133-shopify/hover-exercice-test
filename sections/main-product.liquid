    },
    {
      "type": "color",
      "id": "subscription_selected_badge_text",
      "label": "Subscription Selected Badge Text Color",
      "default": "#FFFFFF"
    },
    {
      "type": "header",
      "content": "Spacing"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
